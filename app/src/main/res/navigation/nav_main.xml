<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_restaurant"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.where2eat.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_restaurantDetailsFragment"
            app:destination="@id/restaurantDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/restaurantDetailsFragment"
        android:name="com.example.where2eat.RestaurantDetailsFragment"
        android:label="RestaurantDetailsFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.where2eat.LoginFragment"
        android:label="LoginFragment" />
    <fragment
        android:id="@+id/bookingFragment"
        android:name="com.example.where2eat.BookingFragment"
        android:label="BookingFragment" />
</navigation>